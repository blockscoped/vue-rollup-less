{
  "prompts": {
    "name": {
      "type": "string",
      "required": true,
      "message": "Project name"
    },
    "description": {
      "type": "string",
      "required": true,
      "message": "Project description",
      "default": "A Vue.js 2.0 project"
    },
    "author": {
      "type": "string",
      "message": "Author"
    },
    "jsformat": {
      "type": "list",
      "message": "Format for bundled JS? (Can be changed later in rollup.config)",
      "choices": [
        "amd",
        "cjs",
        "es",
        "iife",
        "umd"
      ],
      "default": "es"
    },
    "lint": {
      "type": "confirm",
      "message": "Do you want linting?"
    },
    "lintConfig": {
      "when": "lint",
      "type": "list",
      "message": "Pick an eslint config",
      "choices": [
        "vue"
        "airbnb",
        "none"
      ]
    }
  }
}
